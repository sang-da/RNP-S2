rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- 1. SUPER ADMIN (GOD MODE) ---
    // Seul l'email du fondateur a tous les droits, sans condition.
    function isRootAdmin() {
       return request.auth.token.email == 'ahme.sang@gmail.com';
    }

    // --- 2. ADMIN STANDARD (VIA DB) ---
    // Un utilisateur est admin si son document Firestore dit 'role: admin'
    function isDBAdmin() {
       return exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
              get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // --- 3. COMBINAISON ---
    function isAdmin() {
      return isRootAdmin() || isDBAdmin();
    }

    function isAuthenticated() {
      return request.auth != null;
    }

    // --- RÈGLES PAR COLLECTION ---

    // USERS : C'est ici que se joue l'inscription
    match /users/{userId} {
      // Tout le monde peut lire (nécessaire pour voir les profils, le mercato, etc.)
      allow read: if isAuthenticated();
      
      // CRUCIAL : Un utilisateur doit pouvoir CRÉER et MODIFIER sa propre fiche
      // C'est ce qui permet à un 'pending' d'envoyer ses métadatas à la DB.
      // L'Admin peut évidemment tout modifier.
      allow write: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
    }

    // AGENCIES : Gestion du jeu
    match /agencies/{agencyId} {
       allow read: if isAuthenticated();
       allow create: if isAdmin();
       allow delete: if isAdmin();
       // Les étudiants doivent pouvoir écrire pour : Upload fichiers, Mercato, Chat...
       allow update: if isAuthenticated();
    }

    // WEEKS : Planning
    match /weeks/{weekId} {
       allow read: if isAuthenticated();
       allow write: if isAdmin();
    }
  }
}