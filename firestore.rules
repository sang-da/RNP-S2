rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- MODE DÉVELOPPEMENT ---
    // Règle unique et universelle :
    // Si l'utilisateur est connecté (auth != null), il peut lire et écrire PARTOUT.
    
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}